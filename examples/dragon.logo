to dragon :sign :level
   ifelse :level = 0 [fd :stepsize] [
      make "level :level - 1
      rt 45 * :sign
      dragon -1 :level
      lt 90 * :sign
      dragon 1 :level
      rt 45 * sign
      ]
   end


